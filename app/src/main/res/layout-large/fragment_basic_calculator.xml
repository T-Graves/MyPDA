<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/current_result_screen"
        android:focusable="false"
        android:background="#c7c9c5"
        android:textColor="#000000"
        android:textSize="40sp"
        android:gravity="bottom|end" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="20sp"
            android:id="@+id/num7" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="20sp"
            android:id="@+id/num8" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="20sp"
            android:id="@+id/num9" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="/"
            android:textSize="20sp"
            android:id="@+id/div" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="20sp"
            android:id="@+id/num4" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="20sp"
            android:id="@+id/num5" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="20sp"
            android:id="@+id/num6" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="*"
            android:textSize="20sp"
            android:id="@+id/multi" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="20sp"
            android:id="@+id/num1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="20sp"
            android:id="@+id/num2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="20sp"
            android:id="@+id/num3" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="20sp"
            android:id="@+id/sub" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="."
            android:textSize="20sp"
            android:id="@+id/dot" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="20sp"
            android:id="@+id/num0" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+/-"
            android:textSize="20sp"
            android:id="@+id/toggle_sign" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="20sp"
            android:id="@+id/add" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1/x"
            android:textSize="20sp"
            android:id="@+id/invert" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="CLEAR"
            android:textSize="20sp"
            android:id="@+id/clear" />

        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="="
            android:textSize="20sp"
            android:id="@+id/equals" />

    </LinearLayout>

</LinearLayout>