<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView2"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/current_result_screen"
                android:focusable="false"
                android:background="#c7c9c5"
                android:textColor="#000000"
                android:gravity="bottom|end" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="7"
                android:id="@+id/num7" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="8"
                android:id="@+id/num8" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="9"
                android:id="@+id/num9" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="/"
                android:id="@+id/div" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="CLEAR"
                android:id="@+id/clear" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="4"
                android:id="@+id/num4" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="5"
                android:id="@+id/num5" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="6"
                android:id="@+id/num6" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="*"
                android:id="@+id/multi" />
            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="+/-"
                android:id="@+id/toggle_sign" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="1"
                android:id="@+id/num1" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="2"
                android:id="@+id/num2" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="3"
                android:id="@+id/num3" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="-"
                android:id="@+id/sub" />
            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="1/x"
                android:id="@+id/invert" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="."
                android:id="@+id/dot" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="0"
                android:id="@+id/num0" />

            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="+"
                android:id="@+id/add" />

            <Button
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="="
                android:id="@+id/equals" />
        </LinearLayout>





    </LinearLayout>

</ScrollView>
